{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "./**/tests/**", "node_modules"]
}