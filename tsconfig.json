{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "./**/__tests__",  "./**/__test__", "node_modules"]
}